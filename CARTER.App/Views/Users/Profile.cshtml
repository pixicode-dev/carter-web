<style>
    .dropify-wrapper {
        width: 128px !important;
        height: 128px !important;
        border-radius: 50% !important;
        margin: 0 auto;
    }
    .dropify-wrapper .dropify-preview .dropify-render img {
        background: transparent !important
    }
</style>

