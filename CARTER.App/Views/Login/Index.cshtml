@using CARTER.Models.System.Users;
@model LoginRequest
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { autocomplete = "off", @class = "login100-form validate-form" }))
{
    <span class="login100-form-title">
        Login
    </span>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Timezone)
    @*@Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })*@


    <div class="wrap-input100 validate-input">

        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { id = "email", @class = "form-control input100", placeholder = "Email", autocomplete = "off", maxlength = "100" } })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="zmdi zmdi-email" aria-hidden="true"></i>
        </span>
        @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "invalid-feedback" })*@
    </div>
    <div class="wrap-input100 validate-input">
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { id = "password", @class = "form-control input100", placeholder = "Password", type = "password", autocomplete = "off", maxlength = "100" } })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="zmdi zmdi-lock" aria-hidden="true"></i>
        </span>
        @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "invalid-feedback" })*@
    </div>
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="alert alert-danger mb-0">
            @Html.ValidationSummary()
        </div>
    }
    @*<div class="text-end pt-1">
            <p class="mb-0"><a href="forgot-password.html" class="text-primary ms-1">Forgot Password?</a></p>
        </div>*@
    <div class="container-login100-form-btn">
        @*<a href="index.html" class="login100-form-btn btn-primary">
                Login
            </a>*@
        <button class="login100-form-btn btn-primary" type="submit">Login</button>
    </div>
    @*<div class="text-center pt-3">
            <p class="text-dark mb-0">Not a member?<a href="register.html" class="text-primary ms-1">Create an Account</a></p>
        </div>*@

}
@section scripts{
    <script>
        $(document).ready(function () {
            //$(".validation-summary-errors").removeClass("validation-summary-errors");
            $("#Timezone").val(Intl.DateTimeFormat().resolvedOptions().timeZone);
        })
    </script>
}

